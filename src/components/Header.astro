---
import { ui } from '../i18n/ui';

interface Props {
  lang: 'en' | 'fr';
}

const { lang } = Astro.props;

const currentPath = Astro.url.pathname;

// Helper to check active state
const isActive = (path: string) => {
    const cleanCurrent = currentPath.replace(/\/$/, '');
    const cleanPath = path.replace(/\/$/, '');
    return cleanCurrent === cleanPath;
};

// Build language-aware links
const homeLink = `/${lang}/`;
const teamLink = `/${lang}/team`;
const contactLink = `/${lang}/contact`;

// Toggle paths for language switching
const toEn = currentPath.replace('/fr', '/en');
const toFr = currentPath.replace('/en', '/fr');

const isEn = lang === 'en';

// Get translations
const t = ui[lang];
---

<header class="site-header">
  <div class="container header-inner">
    <a href={homeLink} class="logo">
      CCC 2026
    </a>
    
    <nav class="main-nav">
      <a href={homeLink} class:list={["header-nav-link", { active: isActive(homeLink) }]}>{t['nav.home']}</a>
      <a href={teamLink} class:list={["header-nav-link", { active: isActive(teamLink) }]}>{t['nav.team']}</a>
      <a href={contactLink} class:list={["header-nav-link", { active: isActive(contactLink) }]}>{t['nav.contact']}</a>
    </nav>

    <div class="lang-switch">
       <a href={toEn} class:list={["lang-btn", { active: isEn }]}>English</a>
       <a href={toFr} class:list={["lang-btn", { active: !isEn }]}>Fran√ßais</a>
    </div>
  </div>
</header>

<style>
  .site-header {
    padding: 1.5rem 0;
    width: 100%;
    z-index: 100;
  }
  .header-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo {
    font-weight: 800;
    font-size: 1.8rem;
    color: white;
  }
  .main-nav {
    display: flex;
    gap: 2rem;
  }
</style>
