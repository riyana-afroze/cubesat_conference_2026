---
import { ui } from '../i18n/ui';

interface Props {
  lang: 'en' | 'fr';
}

const { lang } = Astro.props;

const currentPath = Astro.url.pathname;

// Helper to check active state
const isActive = (path: string) => {
    const cleanCurrent = currentPath.replace(/\/$/, '');
    const cleanPath = path.replace(/\/$/, '');
    return cleanCurrent === cleanPath;
};

// Build language-aware links
const homeLink = lang === 'en' ? '/' : `/${lang}/`;
const teamLink = lang === 'en' ? '/team' : `/${lang}/team`;
const contactLink = lang === 'en' ? '/contact' : `/${lang}/contact`;

// Toggle paths for language switching
const toEn = currentPath.replace(/^\/fr/, '') || '/';
const toFr = '/fr' + (currentPath === '/' ? '/' : currentPath);

const isEn = lang === 'en';

// Get translations
const t = ui[lang];
---

<header class="site-header">
  <div class="container header-inner">
    <a href={homeLink} class="logo">
      CCC 2026
    </a>
    
    <button class="mobile-menu-toggle" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <nav class="main-nav">
      <a href={homeLink} class:list={["header-nav-link", { active: isActive(homeLink) }]}>{t['nav.home']}</a>
      <a href={teamLink} class:list={["header-nav-link", { active: isActive(teamLink) }]}>{t['nav.team']}</a>
      <a href={contactLink} class:list={["header-nav-link", { active: isActive(contactLink) }]}>{t['nav.contact']}</a>
    </nav>

    <div class="lang-switch">
       <a href={toEn} class:list={["lang-btn", { active: isEn }]}>English</a>
       <a href={toFr} class:list={["lang-btn", { active: !isEn }]}>Fran√ßais</a>
    </div>
  </div>
</header>

<style>
  .site-header {
    padding: 1.5rem 0;
    width: 100%;
    z-index: 100;
  }
  .header-inner {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 2rem;
  }
  .logo {
    font-weight: 800;
    font-size: 1.8rem;
    color: white;
    z-index: 101;
  }
  .main-nav {
    display: flex;
    gap: 2rem;
    justify-self: center;
  }
  .lang-switch {
    justify-self: end;
  }
  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 101;
  }
  .mobile-menu-toggle span {
    width: 25px;
    height: 3px;
    background: white;
    transition: all 0.3s;
    border-radius: 2px;
  }
  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }
  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }
  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  @media (max-width: 768px) {
    .logo {
      font-size: 1.4rem;
    }
    .header-inner {
      grid-template-columns: auto 1fr;
    }
    .mobile-menu-toggle {
      display: flex;
    }
    .main-nav {
      position: fixed;
      top: 0;
      right: -100%;
      width: 70%;
      max-width: 300px;
      height: 100vh;
      background: rgba(19, 0, 43, 0.98);
      backdrop-filter: blur(10px);
      justify-self: auto;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 3rem;
      transition: right 0.3s ease;
      border-left: 1px solid rgba(255, 255, 255, 0.1);
    }
    .main-nav.open {
      right: 0;
    }
    .main-nav a {
      font-size: 1.2rem;
      padding: 0.5rem 1rem;
      min-height: 44px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .lang-switch {
      position: fixed;
      bottom: 3rem;
      left: 50%;
      transform: translateX(-50%);
      width: 200px;
      z-index: 105;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s;
    }
    .main-nav.open ~ .lang-switch {
      opacity: 1;
      pointer-events: auto;
    }
  }
</style>

<script>
  const menuToggle = document.querySelector('.mobile-menu-toggle');
  const mainNav = document.querySelector('.main-nav');
  const navLinks = document.querySelectorAll('.header-nav-link');

  menuToggle?.addEventListener('click', () => {
    menuToggle.classList.toggle('active');
    mainNav?.classList.toggle('open');
  });

  // Close menu when clicking a link
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      menuToggle?.classList.remove('active');
      mainNav?.classList.remove('open');
    });
  });

  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (!target.closest('.header-inner')) {
      menuToggle?.classList.remove('active');
      mainNav?.classList.remove('open');
    }
  });
</script>
