---
interface Props {
  content: {
    heroTitle: string;
    heroButtons: {
      tickets: string;
      booth: string;
      abstract: string;
    };
    aboutCCC: {
      title: string;
      description: string;
    };
    aboutCCN: {
      title: string;
      description1: string;
      description2: string;
      buttonText: string;
    };
    funding: {
      title: string;
      subtitle: string;
      description1: string;
      eligibilityIntro: string;
      eligibilityItems: string[];
      description2: string;
      description3: string;
      buttonText: string;
    };
    aboutSEDS: {
      title: string;
      description1: string;
      description2: string;
      buttonText: string;
    };
    aboutSpaceConcordia: {
      title: string;
      description1: string;
      description2: string;
      buttonText: string;
    };
    footer: string;
  };
}

const { content } = Astro.props;

const links = {
  tickets: "https://www.eventbrite.ca/e/canadian-cubesat-conference-2026-tickets-1978812632853",
  booth: "https://forms.gle/eZspouYDYaU9VHhP7",
  abstract: "https://forms.gle/CyHb6SH9Y1QRS75o9",
  ccn: "https://forms.gle/BvUL7nxkMFcam9sz6",
  csa_funding: "https://www.asc-csa.gc.ca/eng/funding-programs/funding-opportunities/ao/2023-canadian-student-participation-in-space-conferences-and-training-events.asp",
  seds: "https://www.seds.ca/",
  spaceconcordia: "https://spaceconcordia.ca/"
};
---

<main class="container">
  <!-- Hero Section -->
  <section class="hero" itemscope itemtype="https://schema.org/Event">
    <h1 class="hero-title" itemprop="name">{content.heroTitle}</h1>
    <img src="/CCC_2026_logo.png" alt="Canadian CubeSat Conference 2026 Logo - Canada's Premier Space Conference for CubeSat and Satellite Technology" class="hero-logo" itemprop="image" />
    <div class="cta-group">
      <a href={links.tickets} class="btn" target="_blank" rel="noopener noreferrer">{content.heroButtons.tickets}</a>
      <a href={links.booth} class="btn btn-outline" target="_blank" rel="noopener noreferrer">{content.heroButtons.booth}</a>
      <a href={links.abstract} class="btn btn-outline" target="_blank" rel="noopener noreferrer">{content.heroButtons.abstract}</a>
    </div>
  </section>

  <!-- Section 1: About CCC -->
  <section class="info-section">
    <h2 class="section-title">{content.aboutCCC.title}</h2>
    <div class="glass-panel">
      <p>{content.aboutCCC.description}</p>
    </div>
  </section>

  <!-- Section 2: About CCN -->
  <section class="info-section">
    <h2 class="section-title">{content.aboutCCN.title}</h2>
    <div class="glass-panel">
      <img src="/CCN_logo.png" alt="Canadian CubeSat Network Logo - SEDS-Canada and MDA Space Initiative for CubeSat Students" class="ccn-logo" />
      <p>{content.aboutCCN.description1}</p>
      <p>{content.aboutCCN.description2}</p>
      <a href={links.ccn} class="btn" target="_blank" rel="noopener noreferrer">{content.aboutCCN.buttonText}</a>
    </div>
  </section>

  <!-- Section 3: Funding Opportunity -->
  <section class="info-section">
    <h2 class="section-title">{content.funding.title}</h2>
    <div class="glass-panel highlight-panel">
      <img src="/CSA_logo.png" alt="Canadian Space Agency (CSA) Logo - Government of Canada Space Program Funding" class="csa-logo" />
      <h3>{content.funding.subtitle}</h3>
      <p>{content.funding.description1}</p>
      <p>{content.funding.eligibilityIntro}</p>
      <ul>
        {content.funding.eligibilityItems.map(item => <li>{item}</li>)}
      </ul>
      <p>{content.funding.description2}</p>
      <p set:html={content.funding.description3}></p>
      <a href={links.csa_funding} class="btn" target="_blank" rel="noopener noreferrer">{content.funding.buttonText}</a>
    </div>
  </section>

  <!-- Section 4 & 5: SEDS & SpaceConcordia -->
  <div class="grid-2">
    <section class="info-section">
      <h2 class="section-title">{content.aboutSEDS.title}</h2>
      <div class="glass-panel">
        <img src="/SEDS_circle_logo.png" alt="SEDS-Canada Logo - Students for the Exploration and Development of Space Canada" class="section-logo" />
        <p>{content.aboutSEDS.description1}</p>
        <p>{content.aboutSEDS.description2}</p>
        <a href={links.seds} class="btn btn-secondary" target="_blank" rel="noopener noreferrer">{content.aboutSEDS.buttonText}</a>
      </div>
    </section>

    <section class="info-section">
      <h2 class="section-title">{content.aboutSpaceConcordia.title}</h2>
      <div class="glass-panel">
        <img src="/SpaceConcordia_logo.png" alt="SpaceConcordia Logo - Concordia University Student Aerospace Association" class="spaceconcordia-logo" />
        <p>{content.aboutSpaceConcordia.description1}</p>
        <p>{content.aboutSpaceConcordia.description2}</p>
        <a href={links.spaceconcordia} class="btn btn-secondary" target="_blank" rel="noopener noreferrer">{content.aboutSpaceConcordia.buttonText}</a>
      </div>
    </section>
  </div>
</main>

<footer class="site-footer">
  <p>{content.footer}</p>
</footer>

<style>
  .hero {
    text-align: center;
    padding: 4rem 2rem;
    margin-top: 2rem;
  }
  .hero-title {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    font-weight: 800;
    text-transform: uppercase;
    background: linear-gradient(to right, #fff, #ff00ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .glass-panel p {
    text-align: justify;
  }
  .cta-group {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  @media (max-width: 768px) {
    .hero {
      padding: 2rem 1rem;
      margin-top: 1rem;
    }
    .hero-title {
      font-size: 2rem;
      line-height: 1.2;
    }
    .cta-group {
      flex-direction: column;
      gap: 1rem;
      width: 100%;
    }
  }
  .btn-outline {
    background: transparent;
    border: 2px solid var(--color-primary);
  }
  .btn-outline:hover {
    background: var(--color-primary);
  }
  .grid-2 {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  @media (min-width: 768px) {
    .grid-2 {
      grid-template-columns: 1fr 1fr;
    }
  }
  .site-footer {
    text-align: center;
    padding: 2rem 0;
    margin-top: 4rem;
    border-top: 1px solid rgba(255,255,255,0.1);
  }
</style>
