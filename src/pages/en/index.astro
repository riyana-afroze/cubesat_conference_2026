---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';

const links = {
  tickets: "https://www.eventbrite.ca/e/canadian-cubesat-conference-2026-tickets-1978812632853",
  booth: "https://forms.gle/eZspouYDYaU9VHhP7",
  abstract: "https://forms.gle/CyHb6SH9Y1QRS75o9",
  ccn: "https://forms.gle/BvUL7nxkMFcam9sz6",
  csa_funding: "https://www.asc-csa.gc.ca/eng/funding-programs/funding-opportunities/ao/2023-canadian-student-participation-in-space-conferences-and-training-events.asp",
  seds: "https://www.seds.ca/",
  spaceconcordia: "https://spaceconcordia.ca/"
};
---

<Layout title="Canadian CubeSat Conference 2026" lang="en">
  <Header lang="en" />
  
  <main class="container">
    <!-- Hero Section -->
    <section class="hero glass-panel">
      <h1 class="hero-title">CANADIAN CUBESAT CONFERENCE 2026</h1>
      <p class="hero-subtitle">Exploring the Future of Small Satellites</p>
      <div class="cta-group">
        <a href={links.tickets} class="btn">Buy Tickets</a>
        <a href={links.booth} class="btn btn-outline">Reserve a Booth</a>
        <a href={links.abstract} class="btn btn-outline">Submit Abstract</a>
      </div>
    </section>

    <!-- Section 1: About CCC -->
    <section class="info-section">
      <h2 class="section-title">About the Canadian CubeSat Conference</h2>
      <div class="glass-panel">
        <p>
          The Canadian CubeSat Conference 2026 brings together students, industry leaders, and researchers to discuss the latest advancements in CubeSat technology. Join us for a weekend of workshops, networking, and inspiring talks from leaders in the Canadian space sector.
        </p>
      </div>
    </section>

    <!-- Section 2: About CCN -->
    <section class="info-section">
      <h2 class="section-title">About the Canadian CubeSat Network</h2>
      <div class="glass-panel">
        <p>
          The Canadian CubeSat Network (CCN) connects student teams across the country to share knowledge, resources, and opportunities.
        </p>
        <a href={links.ccn} class="btn">Become a CCN Associate</a>
      </div>
    </section>

    <!-- Section 3: Funding Opportunity -->
    <section class="info-section">
      <h2 class="section-title">Funding Opportunity</h2>
      <div class="glass-panel highlight-panel">
        <h3>CSA Funding to Attend CCC 2026</h3>
        <p>
          Great news for students! The Canadian Space Agency (CSA) offers funding to support student participation in space conferences. This funding can help cover travel and accommodation costs for eligible students attending the Canadian CubeSat Conference.
        </p>
        <a href={links.csa_funding} class="btn">Apply Now</a>
      </div>
    </section>

    <!-- Section 4 & 5: SEDS & SpaceConcordia -->
    <div class="grid-2">
      <section class="info-section">
        <h2 class="section-title">About SEDS-Canada</h2>
        <div class="glass-panel">
          <p>
            SEDS-Canada is a national, student-run non-profit committed to advocating for and exploring space.
          </p>
          <a href={links.seds} class="btn btn-secondary">Visit SEDS-Canada</a>
        </div>
      </section>

      <section class="info-section">
        <h2 class="section-title">About SpaceConcordia</h2>
        <div class="glass-panel">
          <p>
            SpaceConcordia is a student-run society at Concordia University dedicated to space engineering and exploration.
          </p>
          <a href={links.spaceconcordia} class="btn btn-secondary">Visit SpaceConcordia</a>
        </div>
      </section>
    </div>


  </main>

  <footer class="site-footer">
    <p>&copy; 2026 Canadian CubeSat Conference</p>
  </footer>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 2rem;
    margin-top: 2rem;
  }
  .hero-title {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    font-weight: 800;
    text-transform: uppercase;
    background: linear-gradient(to right, #fff, #ff00ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .hero-subtitle {
    font-size: 1.5rem;
    color: var(--color-accent);
    margin-bottom: 3rem;
  }
  .cta-group {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  .btn-outline {
    background: transparent;
    border: 2px solid var(--color-primary);
  }
  .btn-outline:hover {
    background: var(--color-primary);
  }
  .grid-2 {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  @media (min-width: 768px) {
    .grid-2 {
        grid-template-columns: 1fr 1fr;
    }
  }
  .team-intro {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 2rem;
  }
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }
  .team-member {
    text-align: center;
  }
  .member-photo-placeholder {
    width: 150px;
    height: 150px;
    background: rgba(255,255,255,0.1);
    border-radius: 50%;
    margin: 0 auto 1rem;
    border: 2px solid var(--color-accent);
  }
  .member-name {
    font-weight: 700;
    margin-bottom: 0.2rem;
    color: var(--color-accent);
  }
  .member-role {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }
  .site-footer {
    text-align: center;
    padding: 2rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }
</style>
